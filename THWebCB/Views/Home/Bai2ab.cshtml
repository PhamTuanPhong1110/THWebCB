
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bai2: Thực hành với Table</title>
</head>
<body>
    <table border="1" cellpadding="10" cellspacing="10" width="500" >
        <!--Tiêu đề các cột-->
        <tr>
            <th>Cột 1</th>
            <th>Cột 2</th>
            <th>Cột 3</th>
            <th>Cột 4</th>
            <th>Cột 5</th>
        </tr>
        @* Dòng dữ liệu cột 1 *@
        <tr>
            <td align="center" colspan="2"><b>1&nbsp;&nbsp; 2</b></td>
            <td colspan="3" align="center"><b>2&nbsp;&nbsp;   3&nbsp;&nbsp;  4</b></td>
            <td><b>5</b></td>
        </tr>
        @* Dòng dữ liệu cột 2 *@
        <tr>
            <td>6</td>
            <td>7</td>
            <td>8</td>
            <td rowspan="3" valign="middle" align="center">9&nbsp;&nbsp;   10<br />14&nbsp;&nbsp;    15<br />19</td>
        </tr>
        @* Dòng dữ liệu cột 3 *@
        <tr>
            <td>11</td>
            <td>12</td>
            <td>13</td>
        </tr>
        @* Dòng dữ liệu cột 4 *@
        <tr>
            <td>16</td>
            <td>17</td>
            <td rowspan="2" valign="middle" align="center">18<br />23</td>
            <td>20</td>
        </tr>
        @* Dòng dữ liệu cột 5 *@
        <tr>
            <td>21</td>
            <td>22</td>
            <td>23</td>
            <td>24</td>
            <td>25</td>
        </tr>

    </table>
</body>
</html>
