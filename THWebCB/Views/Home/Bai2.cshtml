
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bai2: Thực hành với Table</title>
</head>
<body>
    <table border="1" cellpadding="10" cellspacing="10" width="300" >
        <!--Tiêu đề các cột-->
        <tr>
            <th>Cột 1</th>
            <th>Cột 2</th>
            <th>Cột 3</th>
            <th>Cột 4</th>
            <th>Cột 5</th>
        </tr>
        @* Dòng dữ liệu cột 1 *@
        <tr align="center">
            <td><b>1</b></td>
            <td><b>2</b></td>
            <td><b>3</b></td>
            <td><b>4</b></td>
            <td><b>5</b></td>
        </tr>
        @* Dòng dữ liệu cột 2 *@
        <tr>
            <td>6</td>
            <td>7</td>
            <td>8</td>
            <td>9</td>
            <td>10</td>
        </tr>
        @* Dòng dữ liệu cột 3 *@
        <tr>
            <td>11</td>
            <td>12</td>
            <td>13</td>
            <td>14</td>
            <td>15</td>
        </tr>
        @* Dòng dữ liệu cột 4 *@
        <tr>
            <td>16</td>
            <td>17</td>
            <td>18</td>
            <td>19</td>
            <td>20</td>
        </tr>
        @* Dòng dữ liệu cột 5 *@
        <tr>
            <td>21</td>
            <td>22</td>
            <td>23</td>
            <td>24</td>
            <td>25</td>
        </tr>

    </table>
</body>
</html>
